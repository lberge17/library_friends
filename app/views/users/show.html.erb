<h1><%= @user.name %>'s Profile</h1>
<p>Email: <%= @user.email %></p>
<% if @user.image %>
    <img src=<%= @user.image %> alt="user profile picture">
<% end %>

<br>

<% if @user != current_user %>
    <%= link_to 'View this user\'s current recommendations', user_recommendations_path(@user) %>
    <br>
    <% if following_user?(@user) %>
        <%= button_to "Unfollow", follow_path(find_follow(@user)), method: "delete" %>
    <% else %>
        <%= button_to "Follow", {controller: "follows", action: "create", :following_id => @user.id} %>
    <% end %>
<% end %>