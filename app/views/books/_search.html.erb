<% if user_signed_in? %>
      <%= form_tag(books_path, class: "form-inline my-2 my-lg-0", method: :get) do %>
        <%= text_field_tag :title, "", placeholder: "book search by title", class: "form-control mr-sm-2" %>
        <%= text_field_tag :author, "", placeholder: "by author", class: "form-control mr-sm-2" %>
        <%= submit_tag 'Search', class: "btn btn-outline-success my-2 my-sm-0" %>
      <% end %>
<% end %>